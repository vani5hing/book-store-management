<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="capybara.bookstoremanagement.BillViewController">
    <children>
        <Label fx:id="customerLabel" text="Customer: " />
        <TextArea fx:id="booksTextArea" editable="false" prefHeight="200" />
        <Label fx:id="totalPriceLabel" text="Total Price: " />
        <HBox spacing="10">
            <children>
                <Button text="Print" onAction="#handleSaveAsPDF" />
            </children>
        </HBox>
    </children>
</VBox>
