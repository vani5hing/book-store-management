<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="capybara.bookstoremanagement.ManageEmployeesController">
    <children>
        <Label text="Manage Employees" layoutX="20" layoutY="20"/>
        <TableView fx:id="tableView" layoutX="20" layoutY="60" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                <TableColumn fx:id="colPosition" text="Position" prefWidth="200"/>
                <TableColumn fx:id="colSalary" text="Salary" prefWidth="100"/>
            </columns>
        </TableView>
        <HBox layoutX="20" layoutY="480" spacing="20">
            <children>
                <Button text="Add Employee" onAction="#handleAddEmployee"/>
                <Button text="Edit Employee" onAction="#handleEditEmployee"/>
                <Button text="Delete Employee" onAction="#handleDeleteEmployee"/>
                <Button text="Return to Menu" onAction="#handleReturnToMenu"/>
            </children>
        </HBox>
    </children>
</AnchorPane>