<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="capybara.bookstoremanagement.ManageBooksController">
    <children>
        <Label text="Manage Books" layoutX="20" layoutY="20"/>
        <TableView fx:id="tableView" layoutX="20" layoutY="60" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                <TableColumn fx:id="colBookId" text="Book ID" prefWidth="100"/>
                <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
                <TableColumn fx:id="colAuthor" text="Author" prefWidth="200"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            </columns>
        </TableView>
        <HBox layoutX="20" layoutY="480" spacing="20">
            <children>
                <Button text="Add Book" onAction="#handleAddBook"/>
                <Button text="Edit Book" onAction="#handleEditBook"/>
                <Button text="Delete Book" onAction="#handleDeleteBook"/>
                <Button text="Return to Menu" onAction="#handleReturnToMenu"/>
            </children>
        </HBox>
    </children>
</AnchorPane>