<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="capybara.bookstoremanagement.ManageCustomersController">
    <children>
        <Label text="Manage Customers" layoutX="20" layoutY="20"/>
<TableView fx:id="tableView" layoutX="90" layoutY="60" prefWidth="900" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="200"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="300"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                <TableColumn fx:id="colPhone" text="Phone" prefWidth="200"/>
            </columns>
        </TableView>
        <HBox layoutX="20" layoutY="480" spacing="20">
            <children>
                <Button text="Add Customer" onAction="#handleAdd"/>
                <Button text="Edit Customer" onAction="#handleEditCustomer"/>
                <Button text="Delete Customer" onAction="#handleDelete"/>
                <Button text="Return to Menu" onAction="#handleReturnToMenu"/>
            </children>
        </HBox>
    </children>
</AnchorPane>